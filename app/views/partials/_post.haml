.row.post
  .col-xs-12
    .text-center
      %h1
        = post.title
      %p Published on #{post.published_at_date || "Unpublished"}
      - if post.episode
        %p
          = link_to fa_icon("headphones"), post.episode.audio_url
          = link_to fa_icon("info-circle"), post.episode
    = post.text_to_html
