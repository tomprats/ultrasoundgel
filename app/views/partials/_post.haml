.post
  .row
    .col-xs-12
      .text-center
        %h1= post.title
        - if post.episode
          %p
            = link_to post.episode.audio_url do
              = fa_icon("headphones")
              Podcast
            = link_to post.episode do
              = fa_icon("info-circle")
              Learn More
      = post.text_to_html
  .row.small
    .col-md-6 Published on #{post.published_at_date || "Unpublished"}
    .col-md-6.text-right
      - count = post.comments.count
      - if count.zero?
        0 comments
      - else
        = link_to "view comments (#{count})", "#", class: "toggle-comments", data: { post_id: post.id }
.spacer-10
= render partial: "partials/comments", locals: { post: post }
