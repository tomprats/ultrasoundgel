= form_for [:admin, @user], html: { class: "form-horizontal" } do |f|
  .form-group.form-check.row
    .col-sm-offset-2.col-sm-10
        %label.form-check-label
          = f.check_box :admin, class: "form-check-input"
          Administrator?
  .form-group.form-check.row
    .col-sm-offset-2.col-sm-10
        %label.form-check-label
          = f.check_box :post_notifications, class: "form-check-input"
          Send Post Notifications?
  .form-group.row
    = f.label :email, class: "col-sm-2 col-form-label"
    .col-sm-10
      = f.email_field :email, placeholder: "tom@tomprats.com", class: "form-control"
  .form-group.row
    = f.label :first_name, class: "col-sm-2 col-form-label"
    .col-sm-10
      = f.text_field :first_name, placeholder: "Tom", class: "form-control"
  .form-group.row
    = f.label :last_name, class: "col-sm-2 col-form-label"
    .col-sm-10
      = f.text_field :last_name, placeholder: "Prats", class: "form-control"
  .form-group.row
    = f.label :image, class: "col-sm-2 col-form-label"
    .col-sm-10
      = f.file_field :image, class: "form-control"
  .form-group.row
    .col-sm-offset-2.col-sm-10
      = f.submit class: "btn btn-primary"
