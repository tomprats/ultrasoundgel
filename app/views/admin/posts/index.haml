.container-fluid
  .row
    .col-xs-12
      .panel.panel-default
        .panel-heading
          %h4 New/Edit Post
        .panel-body
          = render partial: "form"
  .row
    .col-xs-12
      .panel.panel-default
        .panel-heading
          %h4 Posts
        .table-responsive
          %table.table.table-bordered.table-hover
            %thead
              %tr
                %th Published
                %th Episode
                %th Title
                %th Tags
                %th
            %tbody
              - Post.all.each do |post|
                %tr
                  %td= post.published_at_date
                  %td= post.episode && link_to(post.episode.title, edit_admin_episode_path(post.episode))
                  %td= post.title
                  %td= post.tags
                  %td
                    = link_to "View", admin_post_path(post)
                    &vert;
                    = link_to "Edit", edit_admin_post_path(post)
                    &vert;
                    = link_to "Delete", admin_post_path(post), method: :delete, data: { confirm: "Are you sure you want to delete #{post.title}?" }
