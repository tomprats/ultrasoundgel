.container-fluid
  .row
    .col-12
      .card
        .card-header
          %h4 New Upload
        .card-body
          = render partial: "form"
  .row
    .col-12
      .card
        .card-header
          %h4 Uploads
        .table-responsive
          %table.table.table-bordered.table-hover
            %thead
              %tr
                %th Name
                %th Content Type
                %th Created At
                %th
            %tbody
              - Upload.all.each do |upload|
                %tr
                  %td= upload.name
                  %td= upload.content_type
                  %td= upload.created_at_date
                  %td
                    = link_to "View", upload.file.url, target: :_blank
                    &vert;
                    = link_to "Delete", admin_upload_path(upload), method: :delete, data: { confirm: "Are you sure you want to delete #{upload.name}?" }
