.container-fluid
  .row
    .col-xs-12
      .panel.panel-default
        .panel-heading
          %h4 New/Edit Channel
        .panel-body
          = render partial: "form"
  .row
    .col-xs-12
      .panel.panel-default
        .panel-heading
          %h4 Channels
        .table-responsive
          %table.table.table-bordered.table-hover
            %thead
              %tr
                %th Published
                %th Image
                %th Title
                %th Author
                %th Owner Name
                %th Owner Email
                %th
            %tbody
              - Channel.all.each do |channel|
                %tr
                  %td= channel.published_at_date
                  %td= channel.image && link_to(channel.image.name, edit_admin_file_path(channel.image))
                  %td= channel.title
                  %td= channel.author
                  %td= channel.owner_name
                  %td= channel.owner_email
                  %td
                    = link_to "Edit", edit_admin_channel_path(channel)
                    &vert;
                    = link_to "Delete", admin_channel_path(channel), method: :delete, data: { confirm: "Are you sure you want to delete #{channel.title}?" }
