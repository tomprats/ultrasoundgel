- if current_user.try(:admin)
  .admin-navbar.navbar.navbar-default.center
    .container-fluid
      .navbar-header
        = link_to "Admin", admin_root_path, class: "navbar-brand"
        %button.navbar-toggle.collapsed(data-toggle="collapse" data-target="#admin-navbar")
          %span.icon-bar
          %span.icon-bar
          %span.icon-bar
      #admin-navbar.navbar-collapse.collapse
        %ul.nav.navbar-nav.navbar-right
          %li= link_to "App", admin_apps_path
          %li= link_to "Users", admin_users_path
          %li= link_to "Pages", admin_pages_path
          %li= link_to "Uploads", admin_uploads_path
          %li= link_to "Channels", admin_channels_path
          %li= link_to "Episodes", admin_episodes_path
          %li= link_to "Posts", admin_posts_path
          %li.dropdown
            = link_to "#", class: "dropdown-toggle" , data: {toggle: "dropdown"}do
              Articles
              = fa_icon "caret-down"
            %ul.dropdown-menu
              %li= link_to "Articles", admin_articles_path
              %li= link_to "Categories", admin_article_categories_path
%nav.navbar.navbar-default.center
  .container-fluid
    - if app.navbar_image.present?
      .navbar-header
        = link_to home_path, class: "navbar-brand" do
          = image_tag app.navbar_image.small&.url, alt: "Logo"
        %button.navbar-toggle.collapsed(data-toggle="collapse" data-target="#navbar")
          %span.icon-bar
          %span.icon-bar
          %span.icon-bar
    #navbar.navbar-collapse.collapse
      %ul.nav.navbar-nav.navbar-right
        - pages.each do |page|
          %li= link_to page.name, page_path(page.path)
        - if current_user
          %li.dropdown
            = link_to "#", class: "dropdown-toggle" , data: {toggle: "dropdown"}do
              Profile
              = fa_icon "caret-down"
            %ul.dropdown-menu
              %li= link_to "Profile", edit_user_path
              %li= link_to "Sign Out", session_path, method: :delete
        - else
          %li= link_to "Sign In/Up", new_session_path
        %li
          = link_to fa_icon(:search), "#", data: { toggle: "modal", target: "#search-modal" }, class: "nav-icon"
          - if app.contact_email.present?
            = link_to fa_icon(:send), "mailto:#{app.contact_email}", target: :_blank, class: "nav-icon"
          - if app.twitter.present?
            = link_to fa_icon(:twitter), "https://twitter.com/#{app.twitter}", target: :_blank, class: "nav-icon"
          - if app.facebook.present?
            = link_to fa_icon(:facebook), "https://www.facebook.com/#{app.facebook}", target: :_blank, class: "nav-icon"
          - if app.instagram.present?
            = link_to fa_icon(:instagram), "https://instagram.com/#{app.instagram}", target: :_blank, class: "nav-icon"
          = link_to fa_icon(:rss), feed_url, target: :_blank, class: "nav-icon"
