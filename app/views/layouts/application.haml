<!DOCTYPE html>
%html>
  %head>
    %meta(charset="utf-8")
    %meta(name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no")

    %link(rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png")
    %link(rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png")
    %link(rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png")

    = render "layouts/analytics"
    = render "layouts/sharing"
    = csrf_meta_tags
    = csp_meta_tag

    = javascript_pack_tag "application"
    = stylesheet_pack_tag "application"
  %body(class="#{action_name} #{controller_name} #{controller_name}-#{action_name}")
    #app
    #routes(data-direct-upload-url="#{rails_direct_uploads_url}" data-blob-url-template="#{rails_service_blob_url(":signed_id", ":filename")}")
    = yield
