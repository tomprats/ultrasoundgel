<figure class="attachment attachment--<%= blob.representable? ? "preview" : "file" %> attachment--<%= blob.filename.extension %>">
  <% if blob.video? %>
    <video controls="true" preload="metadata">
      <source src="<%= rails_blob_url(blob) %>" type="<%= blob.content_type %>">Video</source>
    </video>
  <% elsif blob.audio? %>
    <audio controls="true" preload="metadata">
      <source src="<%= rails_blob_url(blob) %>" type="<%= blob.content_type %>">Audio</source>
    </audio>
  <% elsif blob.representable? %>
    <%= image_tag blob.representation(resize_to_limit: local_assigns[:in_gallery] ? [800, 600] : [1024, 768]) %>
  <% end %>
</figure>
